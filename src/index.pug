doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title=site.title
        meta(name="description", content=meta.description)
        meta(property="og:title" content=meta.title)
        meta(property="og:description" content=meta.description)
        meta(property="og:url" content=meta.url)
        meta(property="og:image" content=meta.image)
        meta(name="twitter:card" content="summary_large_image")
        meta(name="viewport", content="width=device-width")
        meta(name="theme-color" content="")
        link(rel="stylesheet", href="./style/main.pcss")
        link(rel="shortcut icon" href="/media/ico-favicon.png" type="image/x-icon")
        //- link(rel="preload" href="" as="")
        script(defer src="./script/main.js")
        script(defer src="https://identity.netlify.com/v1/netlify-identity-widget.js")

    body(class="text-base")
        div(class="mx-auto" style="max-width: 1920px")

            //- Header
            header(id="header-main" class="bg-cover bg-teal lg:bg-header-main lg:bg-imgcover lg:border-b-16 border-teal")
                //- Cover image
                div(class="aspect ratio-1-2 bg-header-main bg-imgcover pb-48 lg:hidden")
                    img(src="/media/logo-eitrmacademy.svg" alt="EIT RawMaterials Academy" class="")
                //- Main Hero
                div(class='max-w-6xl mx-auto p-4 pb-16 lg:flex lg:justify-between')
                    img(src="/media/logo-eitrmacademy.svg" alt="EIT RawMaterials Academy" class="hidden lg:block max-w-lg self-start")
                    div(class="lg:w-1/2 self-end pt-10 lg:pt-32")
                        div(id="cta")
                            h1(class="text-white text-5xl leading-16 font-bold")= header.title
                            div(class="text-white text-4xl leading-14")= header.subtitle
                            a(id="" class="button button-white lg:button-teal" href=header.cta.href)= header.cta.text

            //- main section
            main(class="")

                //- About Lightweight Professional Course
                section(id="about" class="px-4 py-24")
                    div(class="max-w-6xl mx-auto")
                        h2(class="mb-2 text-3xl leading-12 text-blue overline overline-blue")= about.title
                        p(class="mb-6 text-teal text-xl leading-11")= about.intro
                        p(class="")= about.body

                //- Questions
                section(id="questions")
                    each question, i in questions
                        div(class="grid grid-cols-2")
                            - let colStart = i&1 ? 2 : 1
                            div(style="background-image: url("+question.image+")" class="bg-cover bg-center col-span-1 row-span-1 row-start-1 col-start-"+colStart)
                                //- img(src=question.image alt="")
                            - colStart = i&1 ? 1 : 2
                            div(class="text-white bg-teal col-span-1 row-span-1 py-32 px-48 row-start-1 col-start-"+colStart)
                                h3(class="font-bold text-3xl leading-12 overline overline-white")= question.q
                                p= question.a

                section(id="course" class="px-4 py-24")
                    //- Lightweight Professional at a glance
                    div(id="at-a-glance" class="max-w-6xl mx-auto")
                        h2(class="text-3xl leading-12 text-blue overline overline-blue")= at_a_glance.title
                        div.flex
                            each item in at_a_glance.properties
                                div !{item.title}
                                div
                                    img(src=item.image)
                            div.text-sm !{at_a_glance.footnote}

                    //- Course overview
                    div(id="overview" class="max-w-6xl mx-auto")
                        h2(class="text-3xl leading-12 text-blue overline overline-blue")= overview.title
                        p(class="intro")= overview.intro
                        ul
                            each prop in overview.properties
                                li
                                    div.font-bold= prop.term
                                    if prop.deed
                                        div= prop.deed
                                    if prop.list
                                        ul
                                            each item in prop.list
                                                li
                                                    if item.title
                                                        div(class="text-blue uppercase font-bold text-lg")= item.title
                                                    if item.intro
                                                        div(class="text-teal text-lg")= item.intro
                                                    if item.items
                                                        ul.list-disc.list-inside
                                                            each subitem in item.items
                                                                li= subitem

                //- Discover our flexible modules
                section(id="modules" class="bg-teal-light")
                    div.bg-teal.text-white
                        div(id="modules-intro" class="max-w-6xl mx-auto px-4 py-24")
                            h2(class="text-3xl leading-12 overline overline-white")= discover_modules.title
                            p(class="text-white text-xl leading-11")= discover_modules.intro
                    for level in collections.levels
                        if level.modules && level.modules.length > 0
                            div(class="max-w-6xl mx-auto px-4 py-4")
                                h2(class="text-3xl text-blue") #{level.title} Level
                                p(class="text-teal text-xl leading-11")= level.summary
                                ul(class="grid grid-cols-4 gap-4")
                                    for mod in level.modules
                                        li
                                            img(src='media'+mod.icon alt=mod.title)
                                            div
                                                div(class="text-blue font-bold")= mod.title
                                                div.text-sm.leading-6= mod.summary
                //- Contact
                section(id="contact" class="px-4 py-24")
                    div(class="max-w-6xl mx-auto")
                        h2(class="text-3xl leading-12 text-blue overline overline-blue")= contact.title
                        p(class="text-teal text-xl leading-11")= contact.intro
                        div(class="bg-teal-lighter p-8")
                            div(class="text-blue font-bold")= contact.person.name
                            div(class="text-teal")= contact.person.title
                            div
                                != marked(contact.person.address, {gfm: true, breaks: true})
                            div= contact.person.phone
                            div: a(href='mailto:'+contact.person.email)= contact.person.email

                //- Partners
                section(id="partners" class="bg-teal-light px-4 py-24")
                    div(class="max-w-6xl mx-auto")
                        h2(class="text-3xl leading-12 text-blue overline overline-blue")= partners.title
                        ul(class="grid grid-cols-4 gap-x-4 gap-y-5")
                            for partner in partners.items
                                li: img(src=partner.logo alt=partner.name)
                        

            //- Footer
            footer.bg-blue.text-white.px-4.pt-12.pb-8
                div.max-w-6xl.mx-auto
                    div(class="sm:flex")
                        //- Contact
                        div(class="sm:w-1/2 md:w-1/3 lg:w-1/4")
                            h4.mb-4= footer.contact
                            div #{site.provider}
                            div
                                - let href = `mailto:${site.email}`
                                a(href=href class="text-white hover:text-teal umami--click--footer-email") #{site.email}
                        //- Social Media
                        div(class="sm:w-1/2 md:w-1/3 lg:w-1/4 mt-8 sm:mt-0")
                            h4.mb-4= footer.connect
                            ul.list-none
                                each url, platform in site.links.social
                                    li.inline.text-3xl.-ml-1.mr-3
                                        - let icon = `<span class="icon-${platform}"></span>`
                                        - let eventClass = 'umami--click--' + platform
                                        a(href=url target="_blank" rel="noopener" aria-label=platform class=eventClass + " text-white hover:text-teal") !{icon}
                    div(class='lg:flex flex-row-reverse justify-between items-end')
                        //- Logo
                        div(class="lg:w-1/4 py-8 sm:pt-8 sm:pb-12 lg:py-0")
                            a(href="https://eitrawmaterials.eu/eit-rm-academy/" target="_blank" rel="noopener")
                                img(src="/media/logo-eitrmacademy.svg" alt="EIT RawMaterials Academy")
                        //- Service Links
                        div#service-links
                            ul.font-bold.uppercase
                                li.inline-block
                                    a(href=site.links.privacy_policy target="_blank" rel="noopener" class="text-white hover:text-teal icon-arrow-right mr-8 umami--click--privacy") #{footer.privacy_policy}
                                li.inline-block
                                    a(href=site.links.imprint target="_blank" rel="noopener" class="text-white hover:text-teal icon-arrow-right mr-8 umami--click--imprint") #{footer.imprint}
